@model EntityLayer.Entities.Manager

<h2>Delete Manager</h2>

<h3>Are you sure you want to delete this manager?</h3>
<div>
    <h4>Manager Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            ID:
        </dt>
        <dd>
            @Model.id
        </dd>
        <dt>
            Name:
        </dt>
        <dd>
            @Model.nameSurname
        </dd>
        <dt>
            Address:
        </dt>
        <dd>
            @Model.adress
        </dd>
        <dt>
            Username:
        </dt>
        <dd>
            @Model.username
        </dd>
        <dt>
            Password:
        </dt>
        <dd>
            @Model.password
        </dd>
    </dl>

    <form asp-controller="Manager" asp-action="Delete" method="post">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

@if (ViewBag.Deleted != null)
{
    <script>
        window.location.href = '@Url.Action("Index", "Manager")';
    </script>
}
